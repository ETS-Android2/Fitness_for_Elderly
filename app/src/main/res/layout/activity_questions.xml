<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background=" #ececf9
">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="50dp"
        android:text="Fitness For Elderly"
        android:textAlignment="center"
        android:textColor="#002966"
        android:textSize="34sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="67dp"
        tools:layout_editor_absoluteY="-7dp" />


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Tell us About Yourself:"
                android:textColor="@android:color/background_dark"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/textView6"
                android:layout_width="209dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:text="1- What is your Age?"
                android:textColor="#000000"
                android:textStyle="bold" />


            <Spinner
                android:id="@+id/spinner"
                android:layout_width="345dp"
                android:layout_height="52dp"
                android:entries="@array/Age"
                android:paddingTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:text="2- How often do you take trainer assistance?"
                android:textColor="#000000"
                android:textStyle="bold" />


            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="319dp"
                android:layout_height="42dp"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="129dp"
                    android:layout_height="44dp"
                    android:layout_marginBottom="436dp"
                    android:checked="false"
                    android:text="Sometimes"
                    android:textSize="16sp" />

                <RadioButton
                    android:layout_width="92dp"
                    android:layout_height="45dp"
                    android:checked="false"
                    android:text="  Never"
                    android:textSize="16sp" />

                <RadioButton
                    android:layout_width="109dp"
                    android:layout_height="43dp"
                    android:checked="false"
                    android:text="  Regular"
                    android:textSize="16sp" />


            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:text="3- What is your favorite exercises?"
                android:textColor="#000000"
                android:textStyle="bold" />


            <CheckBox
                android:id="@+id/yoga"
                android:layout_width="101dp"
                android:layout_height="37dp"
                android:layout_marginTop="5dp"
                android:text="Yoga" />

            <CheckBox
                android:id="@+id/Breathing"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Deep Breathing" />

            <CheckBox
                android:id="@+id/walk"
                android:layout_width="149dp"
                android:layout_height="39dp"
                android:layout_marginTop="5dp"
                android:text="Walking" />

            <CheckBox
                android:id="@+id/GentleStretches"
                android:layout_width="169dp"
                android:layout_height="47dp"
                android:layout_marginTop="5dp"
                android:text="Gentle Stretches" />

            <CheckBox
                android:id="@+id/ChairSquats"
                android:layout_width="171dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:text="Chair Squats" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="4- What is your favorite food type?"
                android:textColor="#000000"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="345dp"
                android:layout_height="52dp"
                android:entries="@array/food"/>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:text="5- Do you have any disability ? (Any muscle disfunctioning)"
                android:textColor="#000000"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/disability"
                android:layout_width="255dp"
                android:layout_height="215dp"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/radioMale5"
                    android:layout_width="120dp"
                    android:layout_height="42dp"
                    android:text="Joint Pain"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/radioMale6"
                    android:layout_width="162dp"
                    android:layout_height="41dp"
                    android:text="Muscle Cramps"
                    android:textSize="16sp" />


                <RadioButton
                    android:id="@+id/radioMale7"
                    android:layout_width="148dp"
                    android:layout_height="42dp"
                    android:text="Broken Cramps"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/radioMale8"
                    android:layout_width="152dp"
                    android:layout_height="42dp"
                    android:text="Respiratory Care "
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/radioMale91"
                    android:layout_width="152dp"
                    android:layout_height="42dp"
                    android:text="None "
                    android:textSize="16sp" />

            </RadioGroup>


            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="6- Do you prefer to have voice assistance?"
                android:textColor="#000000"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/voice"
                android:layout_width="241dp"
                android:layout_height="39dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioMale9"
                    android:layout_width="62dp"
                    android:layout_height="40dp"
                    android:text="Yes"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/radioMale10"
                    android:layout_width="62dp"
                    android:layout_height="40dp"
                    android:checked="false"
                    android:text="No" />


            </RadioGroup>


            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="7- What time do you like to exercises?"
                android:textColor="#000000"
                android:textStyle="bold" />


            <RadioGroup
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/morning"
                    android:layout_width="107dp"
                    android:layout_height="39dp"
                    android:text="Morning"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/after"
                    android:layout_width="119dp"
                    android:layout_height="40dp"
                    android:text="Afternoon" />

                <RadioButton
                    android:id="@+id/eve"
                    android:layout_width="122dp"
                    android:layout_height="40dp"
                    android:text="Evening" />


            </RadioGroup>

            <Button
                android:id="@+id/button7"
                android:layout_width="319dp"
                android:layout_height="52dp"
                android:layout_marginLeft="5dp"
                android:backgroundTint="#002966"
                android:onClick="exercisePage"
                android:text="Submit" />


        </LinearLayout>

    </ScrollView>


</RelativeLayout>


